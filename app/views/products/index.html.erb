<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <p>
      <%= link_to "Show this product", product %>
      <%= button_to "Add to checkout", checkout_items_path(checkout_item: {product_id: product.id}), method: :post %>
    </p>
  <% end %>
</div>

<%= link_to "New product", new_product_path %>
